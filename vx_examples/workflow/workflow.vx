tximport Workflow from "./../../tx_samples/workflow/workflow.tx"

view Task as Rectangle
{
    background: red
    label: Task.name
    {
        font: 15
        background: yellow 0.5
    }
    border: black 3 solid
    link from: this
    {
        arrow: blue 5 diamond filled
    }
    link to: Task.next(Task)
    {
        arrow: red 2 triangle hollow
    }
}