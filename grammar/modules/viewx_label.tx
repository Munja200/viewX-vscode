import viewx_common

LabelProperty:
    LabelFont | LabelWrap | LabelBackground
    // | LabelBorder | LabelOutline
;

LabelFont:
    'font' ':' (color=Color)? size=INT (style=LabelFontStyle)?
;

LabelWrap:
    'wrap' ':' 
;

LabelBackground:
    'background' ':' color=Color (opacity=Opacity)? (shape=LabelBackgroundShape)?
;

LabelBackgroundShape:
    'round'
;

LabelFontStyle:
    'normal' | 'italic' | 'oblique'
;